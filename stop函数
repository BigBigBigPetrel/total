<body>
<button id="stop">stop</button>
<button id="animate">animate</button>
<div id="div1">	</div>
<script src="jquery-1.12.3.js"></script>hhhhH
<script>
	$(function(){
		$("#animate").on('click',function(){
			$('#div1').animate({
			width:400
		},3000).animate({
			height:400
		},3000)
		})
		
		$('#stop').on('click',function(){
			$('#div1').stop();//默认false
		})
	})
</script>
